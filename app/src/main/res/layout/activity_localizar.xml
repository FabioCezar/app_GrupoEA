<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".localizador.LocalizarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_placa_localizador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:gravity="center"
            android:hint="Placa"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/black"
            android:padding="10dp" />

        <Button
            android:id="@+id/bt_localizar_localizador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Localizar"/>

        <TextView
            android:id="@+id/retorno_consulta_localizador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Placa nÃ£o localizada"
            android:textColor="#FF1100"
            android:textSize="30sp"
            android:visibility="invisible"/>


    </LinearLayout>
</LinearLayout>