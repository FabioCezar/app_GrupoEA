<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupoea.aplicativoea">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ea"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ea_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicativoEA"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".nucleo.LocalizarNucleoActivity"
            android:exported="true" />
        <activity
            android:name=".localizador.LocalizarActivity"
            android:exported="true" />
        <activity
            android:name=".nucleo.NucleoActivity"
            android:exported="true" />
        <activity
            android:name=".localizador.LocalizadorActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>